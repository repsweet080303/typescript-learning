root = true

[*]
# code save with format
charset = utf-8

# syntax breakline
end_of_line = lf

# indent 2 spaces
indent_size = 2

# style indent
indent_style = space 

# insert newline at the end of file
insert_final_newline = true

# limit characters in line
max_line_length = 80 

# remove all spaces residual
trim_trailing_whitespace = true
